<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/bottom_navigation_root"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/image_arrow_size_with_margin">

    <ImageView
        android:id="@+id/ivArrowUp"
        android:contentDescription="@string/pull_to_open"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/image_arrow_size"
        android:background="@null"
        android:layout_marginBottom="@dimen/image_arrow_margin_bottom"
        android:src="@drawable/double_arrow_up"/>

    <include layout="@layout/bottom_navigation_menu"/>

</LinearLayout>